<div class="marco-tabs">

	<div class="row">
		{# INGRESO DE EXTRAS #}
		<div class="col-2"></div>

		<div class="col-4 mt-2">
			<label class="lblPresup" for="descripcionExtras">Descripción</label>
		    <input type="text" class="form-control form-control-sm" id="descripcionExtras" name="descripcionExtras">
		</div>
		{# IMPORTE #}
		<div class="col-2 mt-2">
			<label class="lblPresup" for="importeExtra">Importe</label>
			<div class="input-group input-group-sm">
				<div class="input-group-prepend input-group-sm">
					<span class="input-group-text">$</span>
				</div>
				<input id="importeExtra" name="importeExtra" class="form-control form-control-sm cell-right" type="text">
			</div>
		</div>
		<div class="col-2">
			<button id="btnAgregaExtra"
					type="button"
					onclick="PRESUP.onClickBtnAgregarExtra();"
					class="btn btn-sm btn-primary btn-block">
				Agregar extra
			</button>
		</div>
	</div>

	<div class="row">
		<div class="col-8 offset-2 mt-4">
			<div class="table-responsive">
				<table id="tablaExtras" class="table table-sm table-bordered table-hover">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="text-center pl-0 pr-0">#</th>
							<th scope="col" class="text-center pl-0 pr-0">Descripción</th>
							<th scope="col" class="text-center pl-0 pr-0">Importe</th>
							<th scope="col" class="text-center pl-0 pr-0">Acciones</th>
						</tr>
					</thead>
					<tbody id="bodyTablaExtras">
					</tbody>
				</table>
			</div>
		</div>
	</div>	

	<div class="d-flex justify-content-center mb-3">
		<button id="btnSalvarPresup" 
				onclick="PRESUP.onClickBtnGuardarExtras();"
				type="button" 
				class="btn btn-sm btn-success">
			Guardar Extras
		</button>
	</div>


</div>
