<div class="marco-tabs">

	<form id="form_ordenTrab">
		{# Para CSRF control #}
		{{ csrf.field | raw }}

		<div class="row">
			{# REALIZADO POR #}
			<div class="col-sm-2 mt-4 col-label">
				<label class="labelOT" for="idEmpleado">Realizado por</label> 
			</div>
			<div class="col-sm-4 mt-4">
				<select class="form-control form-control-sm" id="idEmpleado" name="idEmpleado">
					<option value="0">Seleccione empleado...</option>
					{% for empl in empleados %}
						<option 
							value="{{ empl.id }}"
							{% if empl.id == data.orden.idEmpleado %} selected {% endif %}>
							{{ empl.apellidoNombre }}
						</option>
					{% endfor %}
				</select>
			</div>
		</div>

		<div class="row">
			{# FECHA TENTATIVA TRABAJO #}
			<div class="col-sm-2 mt-1 col-label">
				<label class="labelOT" for="fechaTentativa">Fecha Tentativa O.T.</label>
			</div>
			<div class="col-sm-3 mt-1">
			    <input type="date" class="form-control form-control-sm" id="fechaTentativa" name="fechaTentativa" value="{{ data.orden.fechaTentativa }}">
			</div>
			{# FECHA EJECUCION #}
			<div class="col-sm-2 offset-sm-1 mt-1 col-label">
				<label class="labelOT" for="fechaEjecucion">Fecha Ejecuci√≥n</label>
			</div>
			<div class="col-sm-3 mt-1">
			    <input type="date" class="form-control form-control-sm" id="fechaEjecucion" name="fechaEjecucion" value="{{ data.orden.fechaEjecucion }}">
			</div>
		</div>

		<div class="row">
			{# DETALLE ORDEN DE TRABAJO #}
			<div class="col-sm-2 col-label">
				<label class="labelOT" for="detalle">Detalle O.T.</label> 
			</div>
			<div class="col-sm-9 mt-1">
				<textarea class="form-control" id="detalle" name="detalle" rows="4">{{ data.orden.detalle }}</textarea>
			</div>
		</div>

	</form>

	<div class="row">
		<div class="col ml-4 mr-4 mt-0">
			<hr />
		</div>
	</div>

	<div class="d-flex justify-content-center mb-3">
		<button id="btnGuardarOrdenT" 
				onclick="PRESUP.onClickBtnGuardarOrdenT();"
				type="button" 
				class="btn btn-sm btn-success">
			Guardar Orden Trabajo
		</button>
		<button id="btnImprimeOrden"
				onclick="PRESUP.onClickBtnImprimir('orden');"
				class="btn btn-info btn-sm ml-3"
				{% if data.orden.idEmpleado == 0 %} disabled {% endif %}>
			Imprimir
		</button>
	</div>

</div>