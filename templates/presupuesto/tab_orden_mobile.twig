<form id="form_ordenTrab">
	{# Para CSRF control #}
	{{ csrf.field | raw }}

	<div class="row">
		{# FECHA TENTATIVA TRABAJO #}
		<div class="col-5 mt-2 col-label">
			<label class="lblPresup" for="fechaTentativa">Fecha Tentativa O.T.</label>
		</div>
		<div class="col-7 mt-2">
		    <input type="date" class="form-control form-control-sm" id="fechaTentativa" name="fechaTentativa">
		</div>
	</div>
	<div class="row">
		{# FECHA EJECUCION #}
		<div class="col-5 mt-2 col-label">
			<label class="lblPresup" for="fechaEjecucion">Fecha Ejecuci√≥n</label>
		</div>
		<div class="col-7 mt-2">
		    <input type="date" class="form-control form-control-sm" id="fechaEjecucion" name="fechaEjecucion">
		</div>
	</div>

	<div class="row">
		{# DETALLE ORDEN DE TRABAJO #}
		<div class="col mt-2">
			<label class="lblPresup" for="detalle">Detalle Orden Trabajo</label>
			<textarea class="form-control" id="detalle" name="detalle" rows="4"></textarea>
		</div>
	</div>

	<div class="row">
		{# REALIZADO POR #}
		<div class="col-4 mt-3 col-label">
			<label class="lblPresup" for="idEmpleado">Realizado por</label> 
		</div>
		<div class="col-8 mt-3">
			<select class="form-control form-control-sm" id="idEmpleado" name="idEmpleado">
				<option value="0">Seleccione empleado...</option>
				{% for empl in empleados %}
					<option value="{{ empl.id }}">{{ empl.apellidoNombre }}</option>
				{% endfor %}
			</select>
		</div>
	</div>

</form>

<div class="row">
	<div class="col ml-4 mr-4 mt-0">
		<hr />
	</div>
</div>

<div class="d-flex justify-content-center mb-3">
	<button id="btnGuardarOrdenT" 
			onclick="PRESUP.onClickBtnGuardarOrdenT();"
			type="button" 
			class="btn btn-sm btn-success">
		Guardar Orden Trabajo
	</button>
</div>
