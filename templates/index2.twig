{% extends 'base.twig' %}

{% block head %}
  {{ parent() }}

  <link rel="stylesheet" href="{{ base_url() }}/css/animate.min.css">
{% endblock %}

{% block title %}{{ titulo }}{% endblock %} 

{% block imgfondo %}
  <style type="text/css">
    body {  background: url("{{ base_url() }}/img/fondo-index.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
    }
  </style>
{% endblock %} 

{% block navigation %} {# navbar-dark bg-primary #}
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

	  {% include 'partes/nav-brand.twig' %}

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="{{ path_for('login') }}">Ingresar</a>
        </li>
      </ul>

    </div>
  </nav>
{% endblock %}

{% block content %}

  <div class="tridimLogo animated bounceInDown">
    <img src="img/tridimLogo.png" alt="tridimLogo" width="100" height="100">
  </div>

  <!-- Seccion Jumbotron -->
  <section id="empresa">
    
  </section>

  <!-- Seccion de productos -->
  <section id="productos">
    
  </section>

  <!-- Seccion de trabajos realizados -->
  <section id="trabajos">
    
  </section>

{% endblock %}
